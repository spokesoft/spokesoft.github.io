extends layout.pug
block content
  +navbar("index")
  .hero-body.is-justify-content-center
    div(style="display: flex;").is-align-items-center
      div.mr-5
        figure.image.is-128x128
          img(src="favicons/android-chrome-96x96.png")
      div
        h1.title
          span#typewriter
          span soft
        h2.subtitle.pr-3(style="letter-spacing: 0.1rem;") ideas are bigger

block scripts
  script(src="https://cdnjs.cloudflare.com/ajax/libs/TypewriterJS/2.13.1/core.min.js")
  script
    |var element = document.getElementById("typewriter")
    |var typewriter = new Typewriter(element, {});
    |typewriter
    | .typeString('speak')
    | .pauseFor(300)
    | .deleteChars(5)
    | .typeString('spoke')
    | .start()
    | .callFunction(() => {
    |   typewriter.stop()
    | });

